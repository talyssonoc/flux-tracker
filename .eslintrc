---
  parser: "babel-eslint"
  env:
    node: true
  rules:
    strict: 0
    indent: [2, 2]
    quotes: [2, 'single']
    no-unused-vars: 0 // see https://github.com/babel/babel-eslint/issues/21
    camelcase: 0
    no-alert: 0
    no-underscore-dangle: 0
    new-cap: [2, { capIsNewExceptions: ['B', 'DropTarget', 'DragSource', 'DragDropContext'] }]
